<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/rss_list_item_vertical_padding"
    android:paddingBottom="@dimen/rss_list_item_vertical_padding"
    android:paddingRight="@dimen/rss_list_right_padding"
    android:orientation="vertical">

    <TextView android:id="@+id/rss_list_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rss_list_placeholder" />

    <TextView android:id="@+id/rss_list_feed"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rss_list_placeholder" />

    <TextView android:id="@+id/rss_list_summary"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/rss_list_item_elt_vertical_padding"
        android:text="@string/rss_list_placeholder" />

    <TextView android:id="@+id/rss_list_date"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/rss_list_item_elt_vertical_padding"
        android:text="@string/rss_list_placeholder" />
</LinearLayout>